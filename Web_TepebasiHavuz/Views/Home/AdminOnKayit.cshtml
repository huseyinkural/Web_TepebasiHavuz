@model IEnumerable<OnKayit>
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ön Kayıt Listesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

<h2>Ön Kayıt Listesi</h2>

<table class="table table-striped">
    <thead style="color: #fff; background-color: #343a40; border-color: #454d55">
        <tr>
            <th>TC</th>
            <th>İsim Soyisim</th>
            <th>Doğum Tarihi</th>
            <th>Derece</th>
            <th>Cinsiyet</th>
            <th>Kan Grubu</th>
            <th>Hastalık Detayı</th>
            <th>Veli Bilgisi</th>
            <th>Adres</th>
            <th>Kullandığı İlaç Bilgisi</th>
            <th></th>



        </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.TC</td>
            <td>@e.FullName</td>
            <td>@e.DateOfBirth</td>
            <td>@e.Degree</td>
            <td>@e.Sex</td>
            <td>@e.BloodGroup</td>
            <td>@e.IllnessDetail</td>
            <td>@e.ParentInfo</td>
            <td>@e.User_Address</td>
            <td>@e.PillDetail</td>

            <td>
                <a asp-action="AddOnKayit" asp-route-key="@e.UserID"
                   class="btn btn-success">
                    Ön Kaydı Ekle
                </a>
                <input type="hidden" name="Id" value="@e.UserID" />

            </td>
            <td>
                <a asp-action="DeleteOnKayit" asp-route-key="@e.UserID"
                   class="btn btn-danger">
                    Kaydı Sil
                </a>
                <input type="hidden" name="Id" value="@e.UserID" />

            </td>

        </tr>
    }
    </tbody>
</table>


</body>
</html>
