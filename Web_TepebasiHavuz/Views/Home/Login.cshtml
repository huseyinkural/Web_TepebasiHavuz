@model Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
  
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

<div class="text-center">
    <img src="~/images/logotepebasi.png" style="margin-top: 10px;"/>
</div>

<div class="panel panel-success" style="margin-top: 10px; margin-left: 150px; margin-right: 150px;">
    <div class="panel-body">
        <form class="p-a-1" asp-controller="Home" asp-action="Login" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group-lg">
                <label>TC Kimlik No :</label>
                <input asp-for="TC" class="form-control" type="text"/>
            </div>
         
            <div class="text-center" style="margin-top: 30px;">
                <button class="btn btn-success" type="submit" style="width: 250px;">Giriş</button>
            </div>
            <hr>
            <div class="text-center" style="margin-top: 30px;">
               
                <p>Henüz bir kaydınız yok ise</p>
                <a class="btn btn-warning" asp-action="OnKayit" style="width: 200px;">Ön Kayıt İçin Tıklayınız</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>
