@model Users
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Öğrenci</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>


<div class="panel panel-info" style="margin-top: 50px; margin-left: 150px; margin-right: 150px;">
    <div class="panel-heading">Kullanıcı</div>
    <div class="panel-body">
        <form asp-action="UpdateUsers" method="post">
            <div class="form-group">
                <label asp-for="TC">TC</label>
                <input asp-for="TC" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="FullName">İsim Soyisim</label>
                <input asp-for="FullName" class="form-control" />
            </div>



            <div class="form-group">
                <label asp-for="DateOfBirth">Yaş</label>
                <input class="form-control datepicker" asp-for="DateOfBirth" />
            </div>

            <div class="form-group">
                <label asp-for="Sex">Cinsiyet</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="Erkek">
                    <label class="form-check-label" for="exampleRadios1">
                        Erkek
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="Kadın">
                    <label class="form-check-label" for="exampleRadios1">
                        Kadın
                    </label>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Degree">Derece</label>
                <select class="form-control" asp-for="Degree">
                    <option>Baslangic</option>
                    <option>2.Teknik</option>
                    <option>3.Teknik</option>
                    <option>4.Teknik</option>
                    <option>2.Seviye</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="User_Address">Adres</label>
                <input asp-for="User_Address" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="User_Address">Adres</label>
                <input asp-for="User_Address" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="BloodGroup">Kan Grubu</label>
                <select class="form-control" asp-for="BloodGroup">
                    <option>A rh+</option>
                    <option>A rh-</option>
                    <option>B rh+</option>
                    <option>B rh-</option>
                    <option>0 rh+</option>
                    <option>0 rh-</option>
                    <option>AB Rh+</option>
                    <option>AB Rh-</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ParentInfo">Yakın Bilgisi</label>
                <input asp-for="ParentInfo" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="PillDetail">Kullandığı ilaç bilgisi</label>
                <input asp-for="PillDetail" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="IllnessDetail">Hastalık Bilgisi</label>
                <input asp-for="IllnessDetail" class="form-control" />
            </div>





            <div class="text-center">
                <button type="submit" class="btn btn-success" style="width: 200px;">Kaydet</button>
                <a asp-action="AdminView" class="btn btn-warning" style="width: 200px;">Listeye Geri Dön</a>
            </div>
        </form>

          
    </div>
</div>


</body>